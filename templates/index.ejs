<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="./style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body>
    <h1>Hello World</h1>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">id</th>
                <th scope="col">name</th>
                <th scope="col">course_type</th>
                <th scope="col">sesmester</th>
                <th scope="col">department</th>
              </tr>
        </thead>

       <tbody>
            <% course.forEach(item => { %>
                <tr scope="row">
                    <td><%= item.id %></td>
                    <td><%= item.name %></td>
                    <td><%= item.course_type %></td>
                    <td><%= item.semester %></td>
                    <td><%= item.department %></td>
                </tr>
            <% }) %>
       </tbody>
      </table>
      <form action="/" method="POST" enctype="multipart/form-data">
        <div class="mb-3 form-check">
            <input type="text" class="form-check-label" name="id">
            <label class="form-check-label">Id</label>
          </div>
          <div class="mb-3 form-check">
            <input type="text" class="form-check-label" name="name">
            <label class="form-check-label">Name</label>
          </div>
          <div class="mb-3 form-check">
            <input type="text" class="form-check-label" name = "source_type">
            <label class="form-check-label">Source_type</label>
          </div>
          <div class="mb-3 form-check">
            <input type="text" class="form-check-label" name="semester">
            <label class="form-check-label">Semester</label>
          </div>
          <div class="mb-3 form-check">
            <input type="text" class="form-check-label" name="department" >
            <label class="form-check-label" >department</label>
          </div>
          <button type="submit" class="btn btn-primary">Add</button>
      </form>
</body>
</html>